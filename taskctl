#!/usr/bin/env python3
import subprocess
import sys
from pathlib import Path


def main() -> int:
    root = Path(__file__).resolve().parent
    tool = root / "agents-tasks-knowledge" / ".tooling" / "taskctl.py"
    if not tool.is_file():
        print(f"Brak toolingu: {tool}", file=sys.stderr)
        return 2
    cmd = [sys.executable, str(tool), "--root", str(root), *sys.argv[1:]]
    return subprocess.call(cmd)


if __name__ == "__main__":
    raise SystemExit(main())
